<%- include("../admin/layouts/header") %>

    <section class="content-main">
        <div class="row">
            <div class="col-9">
                <div class="content-header">
                    <h2 class="content-title">Edit Category</h2>
                </div>
                <% if(message){ %>
                    <div class="alert alert-danger" id="error-message"><%=message%></div>
                <% } %>
            </div>
            <div class="col-lg-6">
                <div class="card mb-4">
                    <div class="card-body">
                        <form action="/admin/edit-category" method="post">
                            <input type="hidden" name="subCatId" value="<%= subCat._id %>">
                            <div class="mb-4">
                                <label for="product_title" class="form-label">Category title</label>
                                <input type="text" placeholder="Name of category" class="form-control"
                                    id="category_title" name="catName" value="<%= subCat.subCatName %>" required />
                            </div>
                            <div class="col-lg-12">
                                <div class="mb-4">
                                    <label class="form-label" for="productCat">Belongs to</label>
                                    <select class="form-select" name="productCat" id="productCat" required>
                                        <option  default><%= subCat.category %></option>
                                        <option>Unisex</option>
                                        <option>Boys</option>
                                        <option>Girls</option>
                                    </select>
                                </div>
                            </div>
                            <div class="mb-4">
                                <label class="form-label">Description</label>
                                <textarea placeholder="Type here" class="form-control " rows="4"
                                    name="catDesc" ><%= subCat.catDescÂ %></textarea>
                            </div>
                            <input type="submit" value="Update Category" class="btn btn-md rounded font-sm hover-up">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <%- include("../admin/layouts/footer") %>